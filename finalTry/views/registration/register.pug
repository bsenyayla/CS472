    <!-- Start main-content -->
    <main>
      <div style="padding-top: 1em" class="container">
        <!-- TODO: Add main content here -->
        <h3>Registration</h3>
        <hr />
        <form action="/registration/new" method="POST">
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="txtStudentId" class="form-label">*Student ID Number:</label>
                <input id="txtStudentId" name="txtStudentId" class="form-control" type="text" placeholder="XXX-XX-XXXX" required pattern="\d{3}-\d{2}-\d{4}" title="Please enter the Student ID correct format. i.e (000-11-0003)" />
                <div class="form-text">Enter the Student ID Number (in the format shown)</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="txtFullName" class="form-label">*Full Name:</label>
                <input id="txtFullName" name="txtFullName" class="form-control" type="text" placeholder="Enter Full Name" required />
                <div class="form-text">Enter the Student's Full Name as printed on the University-issued ID Card</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="mb-3">
                <label for="ddlLevelOfStudy" class="form-label">*Level of study:</label>
                <select id="ddlLevelOfStudy" name="ddlLevelOfStudy" class="form-control" required>
                  <option selected>Select...</option>
                  <option>Graduate</option>
                  <option>Undergraduate</option>
                </select>
                <div class="form-text">Select the Level of study</div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="buttons">
                <input id="resetBtn" type="reset" class="btn btn-secondary" value="Reset" />
                <input id="submitBtn" type="submit" class="btn btn-primary" value="Register Student" />
              </div>
            </div>
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Student ID</th>
                <th>Full Name</th>
                <th>Level of Study</th>
              </tr>
            </thead>
            <tbody>

              if registers != null
                  for register, i in registers
                    tr
                      td #{i + 1}.
                      td #{register.studentId}
                      td #{register.fullName}
                      td #{register.levelOfStudy}
              else 
                p #{registers}

                  
            </tbody>
          </table>
        </form>
      </div>
    </main>
